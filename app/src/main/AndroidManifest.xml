<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="androidapp.com.sapplication">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".Utils.GenericFileProvider"
            android:authorities="androidapp.com.sapplication"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/NoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Login_Activity"
            android:label="Login" />
        <activity
            android:name=".Activity.SignupActivity"
            android:label="Sign Up"
            android:parentActivityName=".Activity.Login_Activity"
            android:theme="@style/MyMaterialTheme.Base" />
        <activity android:name=".Activity.HomeActivity" />
        <activity
            android:name=".Activity.SPHome"
            android:label="Dashboard" />
        <activity android:name=".Activity.Categories"></activity>
    </application>

</manifest>